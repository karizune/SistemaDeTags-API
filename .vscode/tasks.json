{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Clean build",
            "type": "shell",
            "command": "rm",
            "args": [
                "-Recurse",
                "${workspaceFolder}/dist"
            ]
        },
        {
            "label": "Create build",
            "type": "shell",
            "command": "npm run build",
            "dependsOn": [
                "Clean build"
            ]
        }
    ]
}